@{
}
@model CreateUserViewModel

<h2 class="mb-4">Add New User</h2>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold"></label>
                    <input asp-for="FullName" class="form-control border-1 border-bottom border-primary rounded-1" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control border-1 border-bottom border-primary rounded-1" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold"></label>
                    <input asp-for="Password" type="password" class="form-control border-1 border-bottom border-primary rounded-1" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control border-1 border-bottom border-primary rounded-1" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Role" class="form-label fw-bold"></label>
                    <select asp-for="Role" class="form-control border-1 border-bottom border-primary rounded-1">
                        <option value="">Select a role</option>
                        <option value="Student">Student</option>
                        <option value="Instructor">Instructor</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
        <div class="mt-3 text-center">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
