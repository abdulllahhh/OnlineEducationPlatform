@{
}
@model EditUserViewModel

<h2 class="mb-4">Edit User</h2>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold"></label>
                    <input asp-for="FullName" class="form-control border-1 border-bottom border-primary rounded-1" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control border-1 border-bottom border-primary rounded-1" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Role" class="form-label fw-bold"></label>
                    <select asp-for="Role" class="form-control border-1 border-bottom border-primary rounded-1">
                        <option value="Student">Student</option>
                        <option value="Instructor">Instructor</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
