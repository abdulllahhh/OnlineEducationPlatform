@model OnlineEducationPlatform.Web.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Edit Book Details</h1>
<div class="row justify-content-center align-items-center">
    <div class="col-md-4 text-center mb-3 mb-md-0">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Book Image" class="img-fluid rounded shadow-sm" style="max-height:250px; max-width:100%;" />
        }
    </div>
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="BookId" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control border-1 border-bottom border-primary rounded-1" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <input asp-for="Description" class="form-control border-1 border-bottom border-primary rounded-1" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Change Book Image (jpg, jpeg, png)</label>
                    <input type="file" name="imageFile" class="form-control border-1 border-bottom border-primary rounded-1" accept=".jpg,.jpeg,.png" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Change Book PDF</label>
                    <input type="file" name="bookFile" class="form-control border-1 border-bottom border-primary rounded-1" accept=".pdf" />
                    <span asp-validation-for="BookUrl" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="mt-3 text-center">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
