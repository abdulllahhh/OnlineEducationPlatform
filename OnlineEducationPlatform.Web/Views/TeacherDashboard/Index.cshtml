@model OnlineEducationPlatform.Web.ViewModels.TeacherDashboardViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="row mb-4">
    <div class="col-md-6">
        <div class="d-flex flex-column gap-4">
            <div class="card text-bg-success h-100">
                <div class="card-body">
                    <h5 class="card-title">Manage Assignment</h5>
                    <p class="card-text">Create and manage all Assignments for your classes!</p>
                    <a asp-controller="Assignment" asp-action="Index" class="btn btn-light">Go to Assignments</a>
                </div>
            </div>
            <div class="card text-bg-primary h-100">
                <div class="card-body">
                    <h5 class="card-title">Manage Exams</h5>
                    <p class="card-text">Create and manage all exams for your classes.</p>
                    <a asp-controller="Exam" asp-action="Index" class="btn btn-light">Go to Exams</a>
                </div>
            </div>
            <div class="card text-bg-info h-100">
                <div class="card-body">
                    <h5 class="card-title">Books</h5>
                    <p class="card-text">Browse educational books and resources.</p>
                    <a asp-controller="Book" asp-action="Index" class="btn btn-light">Go to Books</a>
                </div>
            </div>
            <div class="card text-bg-secondary h-100">
                <div class="card-body">
                    <h5 class="card-title">My Account</h5>
                    <p class="card-text">View and update your personal information.</p>
                    <a asp-controller="ManageAccount" asp-action="Index" class="btn btn-light">Go to My Account</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow border-0 mb-3" style="border-radius: 1.2rem;">
            <div class="card-header bg-warning text-white" style="border-top-left-radius: 1.2rem; border-top-right-radius: 1.2rem;">
                <h4 class="mb-0"><i class="bi bi-journal-bookmark-fill me-2"></i>Your Classes</h4>
            </div>
            <div class="card-body">
                @if (Model.Classes != null && Model.Classes.Count > 0)
                {
                    <div class="row g-2 mt-2">
                        @foreach (var c in Model.Classes)
                        {
                            <div class="col-12">
                                <div class="card h-100 border-success mb-2">
                                    <div class="card-body d-flex flex-column justify-content-between">
                                        <h6 class="card-title text-success"><i class="bi bi-journal-bookmark me-1"></i>@c.ClassName</h6>
                                        <a asp-controller="Class" asp-action="Details" asp-route-id="@c.ClassId" class="btn btn-outline-success btn-sm mt-2 w-100">
                                            <i class="bi bi-info-circle me-1"></i>View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <span class="text-muted">No classes assigned.</span>
                }
            </div>
        </div>
    </div>
</div>
@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
