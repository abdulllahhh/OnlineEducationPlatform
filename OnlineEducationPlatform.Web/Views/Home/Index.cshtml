@{
    ViewData["Title"] = "Home Page";
}


<div class="row g-4">
    <div class="col-md-4">
        <div class="card text-bg-primary h-100">
            <div class="card-body">
                <h5 class="card-title">Manage Exams</h5>
                <p class="card-text">Create and manage all exams for your classes.</p>
                <a asp-controller="Exam" asp-action="Index" class="btn btn-light">Go to Exams</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-bg-success h-100">
            <div class="card-body">
                <h5 class="card-title">Classes</h5>
                <p class="card-text">View and edit your class list and assignments.</p>
                <a asp-controller="Class" asp-action="Index" class="btn btn-light">Go to Classes</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-bg-warning h-100">
            <div class="card-body">
                <h5 class="card-title">Subjects</h5>
                <p class="card-text">Manage subjects and their associations with classes.</p>
                <a asp-controller="Subject" asp-action="Index" class="btn btn-light">Go to Subjects</a>
            </div>
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="col-md-4">
            <div class="card text-bg-danger h-100">
                <div class="card-body">
                    <h5 class="card-title">User Management</h5>
                    <p class="card-text">View and manage user accounts.</p>
                    <a asp-controller="UserManagement" asp-action="Index" class="btn btn-light">Manage Users</a>
                </div>
            </div>
        </div>
    }

    <div class="col-md-4">
        <div class="card text-bg-info h-100">
            <div class="card-body">
                <h5 class="card-title">Books</h5>
                <p class="card-text">Browse educational books and resources.</p>
                <a asp-controller="Book" asp-action="Index" class="btn btn-light">Go to Books</a>
            </div>
        </div>
    </div>

    @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
    {
        <div class="col-md-4">
            <div class="card text-bg-secondary h-100">
                <div class="card-body">
                    <h5 class="card-title">My Account</h5>
                    <p class="card-text">View and update your personal information.</p>
                    <a asp-controller="ManageAccount" asp-action="Index" class="btn btn-light">Go to My Account</a>
                </div>
            </div>
        </div>
    }
    
    @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
    {
        <div class="col-md-4">
            <div class="card text-bg-secondary h-100">
                <div class="card-body">
                    <h5 class="card-title">My Account</h5>
                    <p class="card-text">View and update your personal information.</p>
                    <a asp-controller="StudentExam" asp-action="Index" class="btn btn-light">My Exams</a>
                </div>
            </div>
        </div>

    }
</div>
