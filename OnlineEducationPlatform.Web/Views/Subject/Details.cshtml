@{
}

@model OnlineEducationPlatform.Web.ViewModels.SubjectDetailsViewModel
@{
    ViewData["Title"] = "Subject Details";
}
<h2>Subject Details</h2>
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h3>@Model.Name</h3>
        <p>@Model.Description</p>
        <h4>Classes:</h4>
        <ul>
            @if (Model.Class != null)
            {
                foreach (var classItem in Model.Class)
                {
                    <li>@classItem.ClassName</li>
                }
            }
        </ul>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to Subjects</a>
    </div>
    </div>
