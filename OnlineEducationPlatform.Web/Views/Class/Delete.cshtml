@model OnlineEducationPlatform.Web.Models.Class

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4">Delete Class</h1>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-danger p-4">
            <h4 class="text-danger mb-3">Are you sure you want to delete this class?</h4>
            <dl class="row mb-3">
                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.ClassName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ClassName)</dd>
                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Teacher)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Teacher.FullName)</dd>
            </dl>
            <form asp-action="Delete" class="d-grid gap-2">
                <input type="hidden" asp-for="ClassId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-link">Back to List</a>
            </form>
        </div>
    </div>
</div>
