@model IEnumerable<OnlineEducationPlatform.Web.Models.Class>

@{
    ViewData["Title"] = "Classes";
}

<h1 class="mb-4">Classes</h1>
<div class="mb-3 text-end">

    <a asp-controller="Enrollment" asp-action="Edit" class="btn btn-info">Assign Students to Class</a>
    <a asp-action="Create" class="btn btn-primary">Add New Class</a>
</div>
<div class="table-responsive">
    <table class="table table-hover align-middle shadow-sm">
        <thead class="table-light">
            <tr>
                <th class="fw-bold">@Html.DisplayNameFor(model => model.First().ClassName)</th>
                <th class="fw-bold">@Html.DisplayNameFor(model => model.First().Teacher)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ClassName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Teacher.FullName)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ClassId" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ClassId" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ClassId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
