@model ClassTeacherViewModel;

@{
    ViewData["Title"] = "Edit";
    SelectList teacherList = new SelectList(Model.Teachers, "Id", "FullName");
}

<h1>Edit Class</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="ClassId" />
                <div class="mb-3">
                    <label asp-for="ClassName" class="form-label fw-bold"></label>
                    <input asp-for="ClassName" class="form-control border-1 border-bottom border-primary rounded-1" />
                    <span asp-validation-for="ClassName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="TeacherId" class="form-label fw-bold">Teacher</label>
                    <select asp-for="TeacherId" class="form-control border-1 border-bottom border-primary rounded-1" asp-items="teacherList">
                        <option value="0">--Select--</option>
                    </select>
                    <span asp-validation-for="TeacherId" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="mt-3 text-center">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
