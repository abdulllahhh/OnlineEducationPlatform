@model OnlineEducationPlatform.Web.Models.Assignment

@{
    ViewData["Title"] = "Delete Assignment";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0" style="border-radius: 1.5rem; background: linear-gradient(135deg, #fff0f0 60%, #f9fafc 100%);">
                <div class="card-header bg-danger text-white text-center" style="border-top-left-radius: 1.5rem; border-top-right-radius: 1.5rem;">
                    <h2 class="mb-0"><i class="bi bi-trash me-2"></i>Delete Assignment</h2>
                </div>
                <div class="card-body p-5">
                    <h4 class="text-danger mb-4"><i class="bi bi-exclamation-triangle me-2"></i>Are you sure you want to delete this assignment?</h4>
                    <dl class="row mb-4">
                        <dt class="col-sm-3 text-secondary">Title</dt>
                        <dd class="col-sm-9">@Model.Title</dd>
                        <dt class="col-sm-3 text-secondary">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                        <dt class="col-sm-3 text-secondary">Due Date</dt>
                        <dd class="col-sm-9">@Model.DueDate.ToString("yyyy-MM-dd HH:mm")</dd>
                        <dt class="col-sm-3 text-secondary">Subject</dt>
                        <dd class="col-sm-9">@Model.Subject?.Name</dd>
                        <dt class="col-sm-3 text-secondary">Class</dt>
                        <dd class="col-sm-9">@Model.Class?.ClassName</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="AssignmentId" />
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <input type="submit" value="Delete" class="btn btn-danger px-4" />
                            <a asp-action="Index" class="btn btn-outline-secondary px-4"><i class="bi bi-arrow-left me-1"></i>Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
