@model OnlineEducationPlatform.Web.Models.Assignment

@{
    ViewData["Title"] = "Assignment Details";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0" style="border-radius: 1.5rem; background: linear-gradient(135deg, #f9fafc 60%, #e3e9f7 100%);">
                <div class="card-header bg-primary text-white text-center" style="border-top-left-radius: 1.5rem; border-top-right-radius: 1.5rem;">
                    <h2 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>Assignment Details</h2>
                </div>
                <div class="card-body p-5">
                    <dl class="row mb-4">
                        <dt class="col-sm-3 text-secondary">Title</dt>
                        <dd class="col-sm-9">@Model.Title</dd>
                        <dt class="col-sm-3 text-secondary">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                        <dt class="col-sm-3 text-secondary">Due Date</dt>
                        <dd class="col-sm-9">@Model.DueDate.ToString("yyyy-MM-dd HH:mm")</dd>
                        <dt class="col-sm-3 text-secondary">Subject</dt>
                        <dd class="col-sm-9">@Model.Subject?.Name</dd>
                        <dt class="col-sm-3 text-secondary">Class</dt>
                        <dd class="col-sm-9">@Model.Class?.ClassName</dd>
                        <dt class="col-sm-3 text-secondary">File</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.FilePath))
                            {
                                <a href="@Model.FilePath" target="_blank" class="btn btn-info btn-sm"><i class="bi bi-file-earmark-pdf me-1"></i>Open PDF</a>
                            }
                            else
                            {
                                <span class="text-muted">No File</span>
                            }
                        </dd>
                    </dl>
                    @if (User.IsInRole("Instructor"))
                    {
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a asp-action="Edit" asp-route-id="@Model?.AssignmentId" class="btn btn-primary px-4"><i class="bi bi-pencil-square me-1"></i>Edit</a>
                            <a asp-action="Index" class="btn btn-secondary px-4"><i class="bi bi-arrow-left me-1"></i>Back to List</a>
                        </div>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <button onclick="window.history.back()" class="btn btn-secondary px-4"><i class="bi bi-arrow-left me-1"></i>Back</button>
                        </div>
                    }

                    
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
